{
  "name": "sca-runner",
  "version": "1.0.0",
  "description": "npm audit / Trivy wrapper for Software Composition Analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sca-runner": "dist/index.js"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm",
    "prepare": "npm run build",
    "scan": "node dist/index.js"
  },
  "keywords": [
    "sca",
    "npm-audit",
    "trivy",
    "security",
    "vulnerability",
    "dependency-check"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsdown": "^0.9.0",
    "typescript": "^5.7.0"
  }
}
