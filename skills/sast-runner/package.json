    "sast",
    "security",
    "static-analysis",
    "devsecops"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsdown": "^0.9.0",
    "typescript": "^5.7.0"
  }
}
