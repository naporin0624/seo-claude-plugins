{
  "name": "sast-runner",
  "version": "1.0.0",
  "description": "Semgrep wrapper for Static Application Security Testing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sast-runner": "dist/index.js"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm",
